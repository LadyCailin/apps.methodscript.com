{
	"compilerOptions": {
		"module": "CommonJS",
		"noImplicitAny": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"sourceMap": true,
		"strict": true,
		"target": "ES2020"
	},
	"include": [
		"src/**/*",
		"service/*",
		"controllers/*"
	],
	"exclude": [
		"node_modules",
		"**/*.spec.ts"
	]
}